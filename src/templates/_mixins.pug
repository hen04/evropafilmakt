mixin filmsMenu(current)
	.program-links
		if current === 'films.html'
			.program-links__item.active
				span films
		else
			.program-links__item
				a(href="films.html") films
		if current === "program.html"
			.program-links__item.active
				span horaires
		else
			.program-links__item
				a(href="program.html") horaires
		if current === "cinemas.html"
			.program-links__item.active
				span cinémas
		else
			.program-links__item
				a(href="cinemas.html") cinémas



mixin menu(currentTitle, currentSubtitle)
	nav
		ul.main-menu
			each item in menu
				if item.submenu === false
					li
						if item.url === currentTitle
							a(href= item.url class="active")= item.title
						else
							a(href= item.url)= item.title
				else
					li.has-submenu
						if item.url === currentTitle
							.has-submenu__inner
								a(href= item.url class="active")= item.title
								span(class="iconify" data-icon="entypo:chevron-small-down" data-inline="false")
							ul.sub-menu
								each subitem in item.submenu
									li
										if subitem.url === currentSubtitle
											a(href= subitem.url class="active")= subitem.title
										else
											a(href= subitem.url)= subitem.title
						else
							.has-submenu__inner
								a(href= item.url)= item.title
								span(class="iconify" data-icon="entypo:chevron-small-down" data-inline="false")
							ul.sub-menu
								each subitem in item.submenu
									if subitem.subsubmenu === false
										li
											a(href= subitem.url)= subitem.title
									else
										li.has-third-menu
											.has-third-menu__inner
												a(href= subitem.url)= subitem.title
											ul.third-level-menu
												each subsubitem in subitem.subsubmenu
													li
														a(href="#")= subsubitem.title

