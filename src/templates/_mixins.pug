mixin filmsMenu(current)
	.program-links
		if current === 'films.html'
			.program-links__item.active
				span films
		else
			.program-links__item
				a(href="films.html") films
		if current === "program.html"
			.program-links__item.active
				span horaires
		else
			.program-links__item
				a(href="program.html") horaires
		if current === "cinemas.html"
			.program-links__item.active
				span cinémas
		else
			.program-links__item
				a(href="cinemas.html") cinémas



mixin menu(currentTitle, currentSubtitle, currentThirdTitle)
	nav
		ul.main-menu
			each item in menu
				if item.submenu === false
					li
						if item.url === currentTitle
							a(href= item.url class="active")= item.title
						else
							a(href= item.url)= item.title
				else
					li.has-submenu
						if item.url === currentTitle
							.has-submenu__inner
								a(href= item.url class="active")= item.title
								span(class="iconify" data-icon="entypo:chevron-small-down" data-inline="false")
							ul.sub-menu
								each subitem in item.submenu
									li.has-third-menu
										.has-third-menu__inner
											if subitem.url !== false
												a(href= subitem.url)= subitem.title
											else
												span= subitem.title
										ul.third-level-menu
											each subsubitem in subitem.subsubmenu
												li
													if subsubitem.url !== false
														if subsubitem.url === currentThirdTitle
															a(href= subsubitem.url class="active")= subsubitem.title
														else
															a(href= subsubitem.url)= subsubitem.title
													else
														span= subsubitem.title
						else
							.has-submenu__inner
								a(href= item.url)= item.title
								span(class="iconify" data-icon="entypo:chevron-small-down" data-inline="false")
							ul.sub-menu
								each subitem in item.submenu
									li.has-third-menu
										.has-third-menu__inner
											a(href= subitem.url)= subitem.title
										ul.third-level-menu
											each subsubitem in subitem.subsubmenu
												li
													if subsubitem.url !== false
														a(href= subsubitem.url)= subsubitem.title
													else
														span= subsubitem.title