extends templates/layout
include templates/_mixins

block nav
	- var currentTitle = "online.html";
	+menu(currentTitle)


block content

	.news-page
		h1 Online

		.news-page__section
			h2 Prochainement
			.news-page__text
				p Actuellement, il n'y a pas d'événements virtuels prévus. Vous pouvez consulter l'historique des événements passés.

		.news-page__section
			h2 Evénements passés
			.news-page__list
				each item in news
					if item.online !== true
						a(href="news-detail.html").news-sm
							.news-sm__img
								if item.online !== true
									span.past en ligne
								img(src= item.img alt= item.title)
							h4= item.title
							if item.director !== ""
								p.title= item.director
							if item.date !== ""
								.news-sm__date
									span= item.date
							.news-sm__descr
								p= item.info


		include templates/_incl-pagination